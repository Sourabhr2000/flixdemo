<% @movies.each do |movie| %>
  <section class="movie">

    <div class="image">
      <% if movie.image_file_name %>
        <%= image_tag(movie.image_file_name, :size => "180x90",:class => "img") %>
      <% end %>
      
    </div>

    <div class="summary">
      <h2>
        <%= link_to(movie.title, movie_path(movie)) %>
      </h2>

      <span class="stars">
        rating <%= average_stars(movie) %> 
      </span>
      
      <h3>
        <%= total_gross(movie) %>
      </h3>
      
      <p>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
    </div>
  </section><hr>
  
<% end %>
