

<%= form_with(model: movie, local: true) do |f| %>

  <%= render "movies/errors", object: movie %>

  <%= f.label :title %><br>
  <%= f.text_field :title, autofocus: true %><br><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, rows: 7 %><br><br>

  <%= f.label :rating %><br>
  <%= f.select :rating,['G','PG', 'PG-13', 'R', ' NC-17'] , prompt: "Pick one" %><br><br>

  <%= f.label :released_on %><br>
  <%= f.date_select :released_on,{class: "date"} %><br><br>

  <%= f.label :total_gross %><br>
  <%= f.number_field :total_gross %><br><br>

  <%= f.label :director %><br>
  <%= f.text_field :director %><br><br>

  <%= f.label :duration %><br>
  <%= f.text_field :duration %><br><br>

  <%= f.label :image_file_name %><br>
  <%= f.text_field :image_file_name %><br><br>

  <div class="checkboxes">
    Movie with - <%= f.collection_check_boxes(:genre_ids, Genre.order(:name), :id, :name) %><br><br>
  </div>

  <%= f.submit %>
<% end %>