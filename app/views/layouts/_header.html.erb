<header class="header">
      <nav>
        <ul>
          <li>
            <%= link_to("All Movies", movies_path) %>
          </li>
          <li>
            <%= link_to "Released", movies_path %>
          </li>
          <li>
            <%= link_to 'Upcoming', filter_movie_path(:upcoming) %>
          </li>
          <% if current_user %>
            <li><%= link_to "Add New Movie", new_movie_path, class: "button" %></li>
          <% end %>
          <div style="float:right;">
          <% if current_user %>

            <li>
              <%= link_to current_user.name, current_user %>
            </li>

            <li>
              <%= link_to "account setting", edit_user_path(current_user) %>
            </li>

            <li>
              <%= link_to "log out", session_path , method: :delete,data: { confirm: 'you want to log out..?' },class:"button"%>
            </li>

          <% else %>
            <li>
              <%= link_to "Sign In", new_session_path, class: "button" %>
            </li>
            <li>
              <%= link_to "Sign Up", signup_path, class: "button" %>
            </li>
          <% end %>
          </div>
        </ul>
      </nav>
</header>