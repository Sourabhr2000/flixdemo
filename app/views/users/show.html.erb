<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  
    <div class="actions">
      <% if current_user== @user %>
        <%= link_to "Edit Account", edit_user_path(@user),class: "button edit" %>
      <% end %>
      <% if current_user_admin? || current_user== @user %>
        <%= link_to "Delete Account", @user , method: :Delete, data: { confirm: " delete your account Permanently..?" },class: "button delete" %>
      <% end %>
    </div>
  
</section>

<% if @favorite_movies.present? %>
  <h3>Favorite Movies</h3>
  <div class="favorite-movies">
    <% @favorite_movies.each do |movie| %>
      <b><%= movie.title %></b><br>
      <%= link_to image_tag(movie.image_file_name,:size=>"180x90"), movie %><br><br>
    <% end %>
  </div>
<% end %>